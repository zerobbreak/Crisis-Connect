# Crisis Connect API Development Environment Configuration
# Copy this to .env for local development

# API Configuration
DEBUG=true
API_VERSION=1.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=crisis_connect

# Redis Configuration (Optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security Configuration (Optional for development)
API_KEY=
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000
TRUSTED_HOSTS=localhost,127.0.0.1

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# External APIs
OPEN_METEO_URL=https://api.open-meteo.com/v1/forecast
MARINE_API_URL=https://marine-api.open-meteo.com/v1/marine
GEMINI_API_KEY=

# ML Model Configuration
MODEL_PATH=data/rf_model.pkl
HISTORICAL_DATA_PATH=data/data_disaster.xlsx

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Cache Configuration
CACHE_TTL_SECONDS=300
WEATHER_CACHE_TTL=1800
RISK_CACHE_TTL=300

# EM-DAT API Configuration (Phase 1: Data Foundation)
# Register at https://www.emdat.be/ to get API credentials
EMDAT_API_KEY=
EMDAT_API_URL=https://public.emdat.be/api

